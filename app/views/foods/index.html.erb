<h1> Food List </h1>

<% if @foods.present? %>
  <% @foods.each do |food| %>
    <p><%= food.description %></p>
    <p>GTIN: <%= food.gtin %></p>
    <p>Brand: <%= food.brand_owner %></p>
    <p>Ingredients: <%= food.ingredients %></p>
    <br>
    <hr>
  <% end %>
<% else %>
  <p>There are no foods</p>
<% end %>